---
import "../styles/global.css";
const {
	title = "JIIT Tools Suite",
	description = "A suite of web apps and automation tools for the JIIT community.",
	pageTitle,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle ? `${pageTitle} · ${title}` : title}</title>
		<meta name="description" content={description} />
		<meta name="theme-color" content="#6366f1" />
		<meta
			property="og:title"
			content={pageTitle ? `${pageTitle} · ${title}` : title}
		/>
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://jiit-tools.tashif.codes" />
	</head>
	<body
		class="min-h-full flex flex-col bg-gray-50 text-gray-900 dark:bg-gray-950 dark:text-gray-100"
	>
		<header
			class="border-b border-gray-200/80 bg-white/70 backdrop-blur supports-[backdrop-filter]:bg-white/70 dark:border-white/10 dark:bg-gray-950/60"
		>
			<div
				class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex items-center justify-between py-4"
			>
				<a href="/" class="flex items-center gap-2 no-underline">
					<img src="/favicon.svg" alt="Logo" class="h-6 w-6" />
					<span
						class="font-semibold tracking-tight text-gray-900 dark:text-gray-100"
						>JIIT Tools Suite</span
					>
				</a>
				<nav class="flex items-center gap-4 text-sm">
					<a
						href="/"
						class="no-underline text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
						>Home</a
					>
					<a
						href="/tools"
						class="no-underline text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
						>Tools</a
					>
					<a
						href="https://github.com/tashifkhan"
						target="_blank"
						rel="noreferrer"
						class="no-underline text-gray-700 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white"
						>GitHub</a
					>
				</nav>
			</div>
		</header>
		<main class="flex-1">
			<slot />
		</main>
		<footer
			class="border-t border-gray-200/80 bg-white/70 py-8 text-sm text-gray-600 backdrop-blur supports-[backdrop-filter]:bg-white/70 dark:border-white/10 dark:bg-gray-950/60 dark:text-gray-400"
		>
			<div
				class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
			>
				<p>
					© {new Date().getFullYear()} JIIT Tools Suite — Built by <a
						class="underline"
						href="https://github.com/tashifkhan"
						target="_blank"
						rel="noreferrer">@tashifkhan</a
					>.
				</p>
				<div class="flex items-center gap-4">
					<a
						href="/tools"
						class="no-underline text-indigo-600 hover:text-indigo-700 dark:text-indigo-400 dark:hover:text-indigo-300"
						>Browse Tools</a
					>
					<a
						href="https://t.me/SupersetNotificationBot"
						target="_blank"
						rel="noreferrer"
						class="no-underline">Telegram Bot</a
					>
				</div>
			</div>
		</footer>
	</body>
</html>
