---
import Layout from "../layouts/Layout.astro";

const tools = [
	{
		name: "JPortal",
		href: "https://jportal.tashif.codes",
		desc: "React PWA for JIIT WebKiosk with Pyodide PDF parsing and modern theming.",
		tag: "8k+ users",
	},
	{
		name: "JIIT Timetable",
		href: "https://jiit-timetable.tashif.codes",
		desc: "Real-time timetables and dynamic display for 6.5k+ students.",
		tag: "6.5k+ students",
	},
	{
		name: "Mess Menu",
		href: "https://jiit-timetable.tashif.codes/mess-menu",
		desc: "Daily and weekly meal plans accessible via the timetable portal.",
		tag: "5.2k+ users",
	},
	{
		name: "Placement & Campus Updates",
		href: "https://jiit-placement-updates.tashif.codes",
		desc: "Timely placement opportunities and essential campus news.",
		tag: "4k+ users",
	},
	{
		name: "Sophos Auto-Login",
		href: "https://sophos-autologin.tashif.codes",
		desc: "One-click scripts for seamless access to JIIT LRC and Hostel Wi‑Fi.",
		tag: "~100 users",
	},
	{
		name: "Telegram Notification Bot",
		href: "https://t.me/SupersetNotificationBot",
		desc: "Broadcast real-time updates and announcements to students.",
		tag: "Telegram",
	},
];
---

<Layout
	pageTitle="Tools"
	description="Explore the JIIT Tools Suite — web apps and automation built for the JIIT community."
>
	<section class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
		<h1 class="text-3xl font-bold tracking-tight sm:text-4xl">All Tools</h1>
		<p class="mt-3 max-w-2xl text-gray-600 dark:text-gray-300">
			Explore the growing suite of services designed to improve everyday life at
			JIIT.
		</p>

		<div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
			{
				tools.map((t) => (
					<a
						href={t.href}
						target="_blank"
						rel="noreferrer"
						class="block no-underline rounded-xl border border-gray-200 bg-white/70 p-6 shadow-sm backdrop-blur transition hover:shadow dark:border-white/10 dark:bg-white/5"
					>
						<div class="flex h-full flex-col">
							<div class="flex items-center justify-between gap-2">
								<h2 class="text-lg font-semibold">{t.name}</h2>
								<span class="inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-700 dark:bg-indigo-900/50 dark:text-indigo-300">
									{t.tag}
								</span>
							</div>
							<p class="mt-2 flex-1 text-sm text-gray-600 dark:text-gray-400">
								{t.desc}
							</p>
							<span class="mt-4 text-sm text-indigo-700 dark:text-indigo-300">
								Visit →
							</span>
						</div>
					</a>
				))
			}
		</div>

		<div class="mt-10">
			<a
				class="inline-flex items-center gap-2 rounded-md border border-indigo-300/40 bg-transparent px-4 py-2 text-indigo-700 hover:bg-indigo-50 dark:text-indigo-300 dark:hover:bg-white/5"
				href="https://github.com/tashifkhan"
				target="_blank"
				rel="noreferrer">See all projects on GitHub</a
			>
		</div>
	</section>
</Layout>
