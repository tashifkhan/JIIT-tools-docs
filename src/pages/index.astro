---
import Layout from "../layouts/Layout.astro";
import bg from "../assets/background.svg";

const bullets = [
	"JPortal — React PWA for WebKiosk with Pyodide PDF parsing and modern UI (8k+ users).",
	"JIIT Timetable — Real-time timetables for 6.5k+ students with dynamic display.",
	"Mess Menu — Daily and weekly meals accessible via the timetable portal (5.2k+ users).",
	"Placement & Campus Updates — Timely opportunities and essential campus news (4k+ users).",
	"Sophos Auto-Login — One‑click Wi‑Fi login scripts for LRC and Hostels (~100 users).",
	"Telegram Notification Bot — Real-time broadcast updates and announcements.",
];
---

<Layout pageTitle="Home">
	<section class="relative overflow-hidden">
		<div class="absolute inset-0 -z-10 opacity-20">
			<img src={bg.src} alt="" class="h-full w-full object-cover" />
		</div>
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<span
						class="inline-flex items-center rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-700 dark:bg-indigo-900/50 dark:text-indigo-300"
						>JIIT Tools Suite</span
					>
					<h1 class="mt-3 text-4xl font-bold tracking-tight sm:text-5xl">
						A unified toolkit for JIIT students
					</h1>
					<p class="mt-4 max-w-2xl text-lg text-gray-600 dark:text-gray-300">
						A comprehensive suite of web applications and automation tools that
						bring academic resources, campus information, and everyday utilities
						to your fingertips.
					</p>
					<div class="mt-8 flex flex-wrap items-center gap-4">
						<a
							href="/tools"
							class="inline-flex items-center gap-2 rounded-md bg-indigo-600 px-4 py-2 text-white shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900"
							>Explore Tools</a
						>
						<a
							href="https://github.com/tashifkhan"
							target="_blank"
							rel="noreferrer"
							class="inline-flex items-center gap-2 rounded-md border border-indigo-300/40 bg-transparent px-4 py-2 text-indigo-700 hover:bg-indigo-50 dark:text-indigo-300 dark:hover:bg-white/5"
							>View on GitHub</a
						>
					</div>
					<ul class="mt-10 grid gap-3 text-sm text-gray-700 dark:text-gray-300">
						{
							bullets.map((b) => (
								<li class="flex items-start gap-2">
									<span class="mt-1 inline-block h-1.5 w-1.5 rounded-full bg-indigo-500" />
									{b}
								</li>
							))
						}
					</ul>
				</div>
				<div
					class="rounded-xl border border-gray-200 bg-white/70 p-6 shadow-sm backdrop-blur dark:border-white/10 dark:bg-white/5"
				>
					<div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
						<a
							class="no-underline"
							href="https://jportal.tashif.codes"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">JPortal</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									React PWA for WebKiosk
								</p>
							</div>
						</a>
						<a
							class="no-underline"
							href="https://jiit-timetable.tashif.codes"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">Timetable</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									Real-time class schedules
								</p>
							</div>
						</a>
						<a
							class="no-underline"
							href="https://jiit-timetable.tashif.codes/mess-menu"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">Mess Menu</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									Daily & weekly meals
								</p>
							</div>
						</a>
						<a
							class="no-underline"
							href="https://jiit-placement-updates.tashif.codes"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">Placement & Campus</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									Opportunities & news
								</p>
							</div>
						</a>
						<a
							class="no-underline"
							href="https://sophos-autologin.tashif.codes"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">Sophos Auto-Login</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									One-click Wi‑Fi access
								</p>
							</div>
						</a>
						<a
							class="no-underline"
							href="https://t.me/SupersetNotificationBot"
							target="_blank"
							rel="noreferrer"
						>
							<div
								class="rounded-lg border border-gray-200 p-4 dark:border-white/10"
							>
								<h3 class="font-semibold">Telegram Bot</h3>
								<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
									Real-time notifications
								</p>
							</div>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
